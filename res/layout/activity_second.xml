<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/two_main_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/middle_text"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/black"
        android:gravity="center"
        android:text="设置第二时间段"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_back_selector"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:text="功能开关"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/functionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/function"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="开启/关闭定时开关机功能"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/functionImage"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:src="@drawable/icon_switch_on" >
        </ImageView>
    </RelativeLayout>

    <include layout="@layout/line" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout1"
        android:background="@drawable/item_back_selector"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:text="关机时间"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="00:00"
            android:textColor="@color/grey"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <RelativeLayout
        android:id="@+id/RelativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_back_selector"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:text="开机时间"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/OpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="07:00"
            android:textColor="@color/grey"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/line" />

</LinearLayout>